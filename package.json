{
  "name": "secret-santa-app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "cross-env && jest --passWithNoTests --testPathPattern=controllers/ && cd client && npm run test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.20.6",
    "jest": "24.9.0",
    "nodemon": "^1.18.7",
    "babel-jest": "^24.9.0"
  },
  "dependencies": {
    "babel-eslint": "^10.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "if-env": "^1.0.4",
    "jwks-rsa": "^1.8.1",
    "jwt-decode": "^2.2.0",
    "morgan": "^1.10.0",
    "react-router-dom": "^5.2.0"
  }
}
